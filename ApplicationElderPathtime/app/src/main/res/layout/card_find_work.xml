<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear1"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เลขออเดอร์ :"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOrderNumber"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/linear1"
                android:id="@+id/linear2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"
                    android:textAlignment="textEnd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ชื่อผู้เรียก :"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCardName"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="คณากานต์ เจริญเรืองสกุล"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear2"
                android:id="@+id/linear3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"
                    android:textAlignment="textEnd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="เบอร์มือถือ :"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCardPhone"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0999999999"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/linear3"
                android:id="@+id/linear4"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView

                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"
                    android:textAlignment="textEnd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="สถานที่เริ่มต้น :"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCardStartLocation"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="9555555555555555555555555555555555555555555555555555"/>
            </LinearLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>