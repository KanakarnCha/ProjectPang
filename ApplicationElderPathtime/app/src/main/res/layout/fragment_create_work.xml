<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.CreateWorkFragment"
     android:layout_height="match_parent" android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lin_box_shardow"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHouseCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="บ้านเลขที่"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtHouseCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edt_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHouseCode" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ถนน"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtHouseCode" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtRoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edt_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRoad" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="จังหวัด"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtRoad" />

            <AutoCompleteTextView
                android:id="@+id/edtProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="10dp"
                android:background="@drawable/edt_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProvince" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เขต/อำเภอ"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtProvince" />

            <AutoCompleteTextView
                android:id="@+id/edtDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="10dp"
                android:background="@drawable/edt_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDistrict" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="แขวง/ตำบล"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtDistrict" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtSubDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edt_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSubDistrict" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPostCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="รหัสไปรศณีย์"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtSubDistrict" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtPostCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edt_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPostCode" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เบอร์มือถือ"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPostCode" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edt_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhone" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lin_box_shardow"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constrain1">

            <RelativeLayout

                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชื่อจริง"

                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/edtFirstName"
                    app:layout_constraintEnd_toEndOf="@+id/edtFirstName"
                    app:layout_constraintStart_toStartOf="@+id/edtFirstName" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFirstName"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edt_box"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvFirstName"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="111dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtLastName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLastName"
                    android:padding="10dp"
                    android:background="@drawable/edt_box"
                    tools:ignore="MissingConstraints"
                />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="นามสกุล"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เพศ"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/edtSex"
                    android:padding="10dp"
                    android:background="@drawable/edt_box"
                    android:layout_below="@+id/tvSex"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/relativeLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout3"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="อายุ"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtAge"
                    android:layout_below="@+id/tvAge"
                    android:layout_width="150dp"
                    android:padding="10dp"
                    android:background="@drawable/edt_box"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <RelativeLayout

                android:id="@+id/relativeLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="น้ำหนัก"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_below="@+id/tvWeight"
                    android:id="@+id/edtWeight"
                    android:layout_width="150dp"
                    android:padding="10dp"
                    android:background="@drawable/edt_box"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/relativeLayout5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout5"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ส่วนสูง"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtHight"
                    android:layout_below="@+id/tvHight"
                    android:layout_width="150dp"
                    android:padding="10dp"
                    android:background="@drawable/edt_box"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const3"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constrain2">


            <RelativeLayout
                android:background="@drawable/lin_box_shardow"
                android:elevation="@dimen/cardview_compat_inset_shadow"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ข้อมูลอาการ"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--displaying a radio group on below line-->
                <LinearLayout
                android:orientation="vertical"
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center">

                    <!--adding a radio button -->
                    <CheckBox
                        android:id="@+id/rd1"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:buttonTint="#039BE5"
                        android:checked="false"
                        android:padding="4dp"
                        android:text="ผู้ป่วยติดเตียง"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />

                    <!--adding a radio button -->
                    <CheckBox
                        android:id="@+id/rd2"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:padding="4dp"
                        android:text="ดูดเสมหะ"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:buttonTint="#039BE5"
                        tools:ignore="RtlCompat" />

                    <!--adding a radio button -->
                    <CheckBox
                        android:id="@+id/rd3"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:buttonTint="#039BE5"
                        android:padding="4dp"
                        android:text="ให้อาหารทางสายยาง"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />

                    <CheckBox
                        android:id="@+id/rd4"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:buttonTint="#039BE5"
                        android:padding="4dp"
                        android:text="ออกซิเจน"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />

                    <CheckBox
                        android:id="@+id/rd5"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:buttonTint="#039BE5"
                        android:padding="4dp"
                        android:text="สวนปัสสะวะ"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />

                    <CheckBox
                        android:id="@+id/rd6"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:buttonTint="#039BE5"
                        android:padding="4dp"
                        android:text="สวนอุจจาระ"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />


                    <CheckBox
                        android:id="@+id/rd7"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:padding="4dp"
                        android:buttonTint="#039BE5"
                        android:text="ทำกายภาพเบื่้องต้น"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />


                    <CheckBox
                        android:id="@+id/rd8"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:buttonTint="#039BE5"
                        android:padding="4dp"
                        android:text="ฉีดยาเบาหวาน"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />

                    <CheckBox
                        android:id="@+id/rd9"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:padding="4dp"
                        android:buttonTint="#039BE5"
                        android:text="วัดความดัน"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />


                    <CheckBox
                        android:id="@+id/rd10"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:padding="4dp"
                        android:buttonTint="#039BE5"
                        android:text="เจาะน้ำตาล"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/const3">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddWorkNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ถัดไป"
                android:background="@drawable/button_box"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
